{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest Snips</h2>
    {{if .Snips}}
        <table>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>ID</th>

            </tr>
            {{range .Snips}}
                <tr>
                    <td><a href='/snip?id={{.ID}}'>{{.Title}}</a></td>
                    <td>{{.Created}}</td>
                    <td>#{{.ID}}</td>
                </tr>
            {{end}}
        </table>
    {{else}}
        <p>There's nothing to see here yet!</p>
    {{end}}
{{end}}